# Routes

GET     /ping                               controllers.Application.ping


GET     /employees/details/:id              controllers.Application.getEmployeeDetailsByEmployeeId(id:Int)

GET     /callme                             controllers.Application.testmethod

GET     /detail                             controllers.PostController.listPosts

POST     /detail                             controllers.PostController.createPost

GET      /detail/:id                        controllers.PostController.readPost(id: reactivemongo.bson.BSONObjectId)

PUT      /detail/:id                        controllers.PostController.updatePost(id: reactivemongo.bson.BSONObjectId)

DELETE      /detail/:id                     controllers.PostController.deletePost(id: reactivemongo.bson.BSONObjectId)

